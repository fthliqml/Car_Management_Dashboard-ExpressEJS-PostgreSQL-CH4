<div class="d-flex flex-column gap-3 h-100">
    <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item fw-bold">Cars</li>
            <li class="breadcrumb-item fw-bold" aria-current="page">List Cars</li>
            <li class="breadcrumb-item" aria-current="page">Add New Car</li>
        </ol>
    </nav>
    <h4 class="fw-bold"><%= contentTitle %></h4>
    <div class="bg-white p-4 w-100">
        <form enctype="multipart/form-data" action="<%= formAction %>" method="post" id="createCarForm">
            <div class="d-flex flex-column gap-3">
                <div class="row align-items-center">
                    <div class="col-12 col-md-2">
                        <label for="inputName" class="col-form-label fw-medium required">Nama</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input
                            type="text"
                            id="inputName"
                            name="name"
                            class="form-control"
                            placeholder="Mercedes-Benz C-Class"
                            value="<%= car.name %>"
                            required
                        />
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-12 col-md-2">
                        <label for="inputRent" class="col-form-label fw-medium required"
                            >Sewa Per hari</label
                        >
                    </div>
                    <div class="col-12 col-md-5">
                        <input
                            type="text"
                            id="inputRent"
                            name="rentPerDay"
                            class="form-control"
                            placeholder="Rp 0,-"
                            value="<%= car.rentPerDay %>"
                            required
                        />
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-12 col-md-2">
                        <label for="inputSize" class="col-form-label fw-medium required">Ukuran</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <select name="size" class="form-select" id="inputSize">
                            <option value="Small" <%= car.size == "Small" ? 'selected':''%>>Small</option>
                            <option value="Medium" <%= car.size == "Medium" ? 'selected':''%>>Medium</option>
                            <option value="Large" <%= car.size == "Large" ? 'selected':''%>>Large</option>
                        </select>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-12 col-md-2">
                        <label for="inputImage" class="col-form-label fw-medium <%= !isUpdate? "required" : "" %>">Foto</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input
                            type="file"
                            id="inputImage"
                            name="image"
                            class="form-control"
                            <%= !isUpdate? "required" : "" %>
                        />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="live-alert"></div>
    <!-- Button Group -->
    <div id="button-group" class="mt-auto">
        <a href="/cars" class="btn btn-outline-primary">Cancel</a>
        <input
            type="submit"
            value="Save"
            id="submitForm"
            form="createCarForm"
            class="btn btn-primary"
        />
    </div>
</div>
